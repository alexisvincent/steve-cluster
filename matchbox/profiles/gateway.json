{
  "id": "gateway",
  "name": "Bootstrap Provisioner Node",
  "boot": {
    "kernel": "/assets/coreos/{|coreos.version|}/coreos_production_pxe.vmlinuz",
    "initrd": ["/assets/coreos/{|coreos.version|}/coreos_production_pxe_image.cpio.gz"],
    "args": [
      "coreos.config.url=http://{|network.bootstrapper.hostname|}.{|network.domain|}:8080/ignition?uuid=${uuid}&mac=${mac:hexhyp}",
      "coreos.first_boot=yes",
      "coreos.autologin",

      "interface.internal={|network.gateway.interface.internal|}",
      "address.internal={|network.gateway.address.internal|}",
      "hostname={|network.gateway.hostname|}"
    ]
  },
  "ignition_id": "gateway.gen.yaml"
}