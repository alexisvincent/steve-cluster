{
    "id": "install-reboot",
    "name": "Install CoreOS Container Linux and Reboot",
    "boot": {
      "kernel": "/assets/coreos/{|coreos.version|}/coreos_production_pxe.vmlinuz",
      "initrd": ["/assets/coreos/{|coreos.version|}/coreos_production_pxe_image.cpio.gz"],
      "args": [
        "coreos.config.url=http://{|network.gateway.address|}:8080/ignition?uuid=${uuid}&mac=${mac:hexhyp}&coreos_version={|coreos.version|}&coreos_channel={|coreos.channel|}&gateway_address={|network.gateway.address|}",
        "coreos.first_boot=yes",
        "console=tty0",
        "console=ttyS0",
        "coreos.autologin"
      ]
    },
    "ignition_id": "install-reboot.yaml"
  }