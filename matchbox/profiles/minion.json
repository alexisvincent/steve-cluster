{
  "id": "gateway",
  "name": "Bootstrap Provisioner Node",
  "ignition_id": "minion.yaml",
  "boot": {
    "kernel": "/assets/coreos/{|coreos.version|}/coreos_production_pxe.vmlinuz",
    "initrd": [
      "/assets/coreos/{|coreos.version|}/coreos_production_pxe_image.cpio.gz"
    ],
    "args": [
      "coreos.config.url=http://{|network.gateway.address|}:8080/ignition?uuid=${uuid}&mac=${mac:hexhyp}",
      "coreos.first_boot=yes",
      "console=tty0",
      "console=ttyS0",
      "coreos.autologin"
    ]
  }
}